{
    "name": "eclinter",
    "version": "1.0.0-alpha.1",
    "description": "Validate that doesn't adhere to EditorConfig settings",
    "license": "MIT",
    "author": "itgalaxy <development@itgalaxy.company>",
    "contributors": [
        {
            "name": "Alexander Krasnoyarov",
            "email": "alexander.krasnoyarov@itgalaxy.company",
            "url": "https://vk.com/sterling_archer"
        }
    ],
    "repository": {
        "type": "https",
        "url": "https://github.com/itgalaxy/eclinter"
    },
    "keywords": [
        "editorconfig",
        "tools",
        "validate",
        "validation",
        "cli",
        "lint",
        "linter",
        "space",
        "spaces",
        "newline",
        "newlinews",
        "eof",
        "eol",
        "trailingspaces",
        "indent",
        "indentation"
    ],
    "bugs": {
        "url": "https://github.com/itgalaxy/eclinter/issues"
    },
    "main": "lib/index.js",
    "bin": "bin/eclinter.js",
    "files": [
        "bin",
        "lib",
        "!**/__tests__"
    ],
    "dependencies": {
        "debug": "^2.6.0",
        "file-entry-cache": "^2.0.0",
        "imurmurhash": "^0.1.4",
        "async-throttle": "^1.0.0",
        "globby": "^6.0.0",
        "lintspaces": "~0.5.0",
        "get-stdin": "~5.0.1",
        "lodash": "^4.0.0",
        "meow": "^3.3.0",
        "micromatch": "^2.3.11",
        "table": "^4.0.1",
        "ignore": "^3.2.0",
        "chalk": "^1.1.1",
        "string-width": "^2.0.0",
        "log-symbols": "^1.0.2",
        "isbinaryfile": "^3.0.2",
        "pify": "^2.3.0"
    },
    "devDependencies": {
        "ava": "^0.19.0",
        "ajv-cli": "^2.1.0",
        "babel-cli": "^6.11.0",
        "babel-core": "^6.22.0",
        "babel-preset-es2015": "^6.9.0",
        "babel-preset-stage-0": "^6.5.0",
        "babel-register": "^6.9.0",
        "coveralls": "^2.11.6",
        "eslint": "^3.19.0",
        "eslint-plugin-ava": "^4.0.0",
        "eslint-plugin-import": "^2.2.0",
        "eslint-plugin-itgalaxy": "^46.0.0",
        "eslint-plugin-jsx-a11y": "^5.0.0",
        "eslint-plugin-lodash": "^2.1.0",
        "eslint-plugin-node": "^4.0.0",
        "eslint-plugin-promise": "^3.3.0",
        "eslint-plugin-react": "^7.0.0",
        "eslint-plugin-unicorn": "^2.0.0",
        "npmpub": "^3.1.0",
        "npm-run-all": "^4.0.0",
        "package-schema": "^1.0.0",
        "remark-cli": "^3.0.0",
        "remark-lint": "^6.0.0",
        "remark-preset-lint-itgalaxy": "^6.0.0"
    },
    "scripts": {
        "coveralls": "nyc report --reporter=text-lcov | coveralls",

        "lint:eslint": "eslint . --ignore-path .gitignore  --color",
        "lint:package": "ajv -s ./node_modules/package-schema/schema.json -d package --errors=text",
        "lint:remark": "remark . -i .gitignore -f -q",
        "lint": "npm-run-all -l --parallel lint:*",

        "pretest": "npm run lint",
        "test": "echo 'No tests now:('",

        "release": "npmpub"
    },
    "ava": {
        "require": "babel-register",
        "concurrency": 5,
        "babel": "inherit"
    },
    "babel": {
        "presets": [
            "es2015",
            "stage-0"
        ]
    },
    "eslintConfig": {
        "parserOptions": {
            "sourceType": "script"
        },
        "rules": {
            "no-underscore-dangle": [
                "error",
                {
                    "allow": [
                        "_validator",
                        "_createEclinterResult",
                        "_getFileInformation",
                        "_lintSource",
                        "_options"
                    ],
                    "allowAfterThis": true,
                    "allowAfterSuper": true
                }
            ]
        },
        "extends": [
            "plugin:itgalaxy/ava",
            "plugin:itgalaxy/esnext",
            "plugin:itgalaxy/node",
            "plugin:itgalaxy/lodash"
        ],
        "root": true
    }
}
